@*This Is parameter id which will passing in edit/delete/details*@
@model int

<td style="width:150px">
    <div class="btn btn-group" role="group">
        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@Model"><i class="fas fa-edit"></i></a>
        <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@Model"><i class="fas fa-list-alt"></i></a>
        @*<a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@Model"><i class="fas fa-trash-alt"></i></a>*@
        <button asp-action="Delete" asp-route-id="@Model" onclick="Delete('@Url.Action("Delete")'+'/@Model')" class="btn btn-danger text-white"><i class="fas fa-trash-alt"></i></button>
    </div>
</td>